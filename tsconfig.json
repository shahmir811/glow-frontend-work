{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"paths": {
			"@pages": ["pages"], // this doesn't work for @pages/smth
			"@pages/*": ["pages/*"],
			"@components": ["components"],
			"@components/*": ["components/*"]
		}
	},
	"include": ["src"],
	"exclude": [
		"**/*-copy*.ts", // Excludes TypeScript files ending with -copy.ts from being compiled.
		"**/*-copy*.tsx" // Excludes TypeScript files ending with -copy.tsx from being compiled.
	]
}
